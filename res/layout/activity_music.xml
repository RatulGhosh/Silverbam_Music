<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sdread.Music" >

    <ImageView
        android:id="@+id/imview"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@android:drawable/alert_light_frame" />

    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imview"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/imview"
        android:text="00:00"
        android:textColor="#A4E0EA"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/counter"
        android:layout_below="@+id/counter"
        android:layout_marginTop="15dp"
        android:text="00:00:00"
        android:textColor="#A4E0EA"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imview"
        android:layout_below="@+id/imview"
        android:layout_marginTop="18dp"
        android:text="SongName"
        android:textColor="#A4E0EA"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageButton
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seek"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="#000000"
        android:src="@android:drawable/ic_media_play" />

    <SeekBar
        android:id="@+id/seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_below="@+id/name"
        android:layout_marginTop="82dp" />

    <ImageButton
        android:id="@+id/rew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seek"
        android:layout_alignTop="@+id/prev"
        android:background="#000000"
        android:src="@android:drawable/ic_media_rew" />

    <ImageButton
        android:id="@+id/prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/play"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/rew"
        android:background="#000000"
        android:src="@android:drawable/ic_media_previous" />

    <ImageButton
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/play"
        android:layout_toRightOf="@+id/imview"
        android:background="#000000"
        android:src="@android:drawable/ic_media_pause" />

    <ImageButton
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/play"
        android:layout_below="@+id/play"
        android:layout_marginTop="19dp"
        android:background="#000000"
        android:src="@android:drawable/checkbox_off_background" />

    <ImageButton
        android:id="@+id/ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stop"
        android:layout_alignRight="@+id/seek"
        android:background="#000000"
        android:src="@android:drawable/ic_media_ff" />

    <TextView
        android:id="@+id/art"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/name"
        android:layout_below="@+id/name"
        android:layout_marginTop="37dp"
        android:text="Artist"
        android:textColor="#A4E0EA"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stop"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/play"
        android:background="#000000"
        android:src="@android:drawable/ic_media_next" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stop"
        android:layout_alignParentBottom="true"
        android:textColor="#A4E0EA"
        android:text="Loop" />

</RelativeLayout>
